using System;
					
public class Program
{
	public void Main()
	{
		Console.WriteLine("Welcome");
		DoMath();
	}
	
	public void DoMath () {
		var number = 2 + 2;
		Console.WriteLine(number);
	
	}
}

using System;
					
public class Program
{
	public void Main()
	{
		Console.WriteLine("Welcome");
		DoMath(10);
		DoMath(50);
		DoMath(6);
	}
	
	public void DoMath (int value) {
		var number = value + 2;
		Console.WriteLine(number);
	
	}
}